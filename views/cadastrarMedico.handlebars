{{>navBarAdm}}

<h3 class="text-center mt-2 titulo">Cadastro de Médico</h3>
<div class="container">
    <div class="row mb-1 h-100 justify-content-center align-items-center">
        <div class="col-lg-6">
            <form action="/cadastrarMedico" class="form-group" method="post">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" name="nome" id="nome" placeholder="Informe o nome">
                </div> 

                <div class="input-group mb-3">
                    <input type="text" class="form-control" name="crm" id="crm" placeholder="Infome o CRM">
                </div>

                {{!-- trocar pelo dropdown menu --}}
                <div class="input-group mb-3">
                    {{!-- <input type="text" class="form-control" name="especialidade" id="especialidade" placeholder="especialidade"> --}}
                    <select name="especialidade" class="form-select">
                        <option selected disabled value="nill">Selecione a especialidade</option>
                        {{#each especialidades}}
                            <option value="{{nome}}">{{nome}}</option>
                        {{/each}}
                    </select>
                </div>

                <div class="input-group mb-3">
                    <input type="text" class="form-control" name="rg" id="rg" placeholder="Informe o RG">
                </div>

                <div class="input-group mb-3">
                    <input type="text"  class="form-control" name="cpf" id="cpf" placeholder="Informe o CPF XXX.XXX.XXX-XX">
                </div>

                <div class="input-group mb-3">
                    <input type="text" class="form-control" name="url" id="url" placeholder="Informe a Url da foto">
                </div>

                <div class="input-group mb-3">
                    <input type="text" class="form-control" name="formacao" id="formacao" placeholder="Informe a formação">
                </div>

                <div class="input-group mb-3">
                    <input type="email" class="form-control" name="email" id="email" placeholder="Informe o email   ex:email@email.com">
                </div>

                <div class="input-group mb-3">
                    <input type="text" class="form-control" name="telefone" id="telefone" placeholder="Informe o telefone (XX)XXXX-XXXX">
                </div>
                <div class="col mt-3 text-end">
                    <button type="submit" class="btn btnAdm ">Enviar</button>
                    <button type="reset" class="btn btnAdm clearAdm">Limpar</button>
                </div>
            </form> {{!-- form --}}
        </div> {{!-- col --}}
    </div> {{!-- row --}}
</div> {{!-- container --}}

