{{>navBarUser}}
<div class="container-fluid text-center cardsM">
  <h3 class="mt-3 tituloUser">Conheça nossos médicos</h3>
  <div class="container ">
  <div class="row mt-4">
    <div class="col-lg-6">
      <form action="/buscaNome" method="post">
             <div class="input-group w-100 me-auto mb-3">
          <input name="buscaNome" id="buscaNome" type="text" class="form-control" placeholder="Pesquisar médico por nome"
            aria-label="Input group example" aria-describedby="basic-addon1">
          <button type="submit" class="input-group-text" id="basic-addon1">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#1D438A" class="bi bi-search"
              viewBox="0 0 16 16">
              <path
                d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z">
              </path>
            </svg>
          </button>
        </div>
      </form>
    </div>
    <div class="col-lg-6">
      <form action="/buscaEspecialidade" method="post">
          <div class="input-group w-100">
          <input name="buscaEspecialidade" id="buscaEspecialidade" type="text" class="form-control"
            placeholder="Pesquisar médico por especialidade" aria-label="Input group example" aria-describedby="basic-addon1">
          <button type="submit" class="input-group-text" id="basic-addon1">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#1D438A" class="bi bi-search"
              viewBox="0 0 16 16">
              <path
                d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z">
              </path>
            </svg>
          </button>
        </div>
      </form>
    </div>
  </div>
  </div>


  {{#if vazio}}<h3>Nenhum resultado encontrado</h3>
  {{else}}

  <div class="container">
    <div class="row my-4 ">
      {{#each medicos}}
      <div class="col-lg-3 col-md-6 col-sm-12 mb-3 d-flex justify-content-center">
        <div class="card cardContainer" style="width: 17rem;">
          <img src="{{url}}" class="w-100 card-img-top" alt="">
          <div class="card-body">
            <h5 class="card-title">{{nome}}</h5>
            <p class="card-text">{{especialidade}}</p>
            <button onclick="mostrarModal(this)" href="#" class="btn btnUser">Perfil Completo
              <input type="hidden" value="{{nome}}">
              <input type="hidden" value="{{email}}">
              <input type="hidden" value="{{crm}}">
              <input type="hidden" value="{{especialidade}}">
              <input type="hidden" value="{{formacao}}">
            </button>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
  {{/if}}
  <div class="modal" tabindex="-1" id="modalAlerta">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="tituloModal"></h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body" id="corpoModal">
          {{!-- campo do modal, as infos vão ser inseridas aqui --}}
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btnUser" data-bs-dismiss="modal">Fechar</button>
        </div>
      </div>
    </div>
  </div>
</div>



{{>footer}}