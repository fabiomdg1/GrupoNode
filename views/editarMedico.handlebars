<script>
    document.querySelector("img").src = "/img/logo.png"
    document.querySelector("link[rel*='icon']").href = "/img/icon.png";
</script>

<h3 class="text-center mt-2 titulo">Editar Médico</h3>
<div class="container">
    <div class="row mb-1 h-100 justify-content-center">
        <div class="col-lg-6">
            <form action="/editarMedico" class="form-group" method="post">
                <input type="hidden" name="id" id="id" value = '{{resultado._id}}'>
                
                <div class="input-group mb-2">
                    <input type="text" class="form-control" name="nome" id="nome" value = '{{resultado.nome}}' placeholder="Insira o nome do médico (obrigatório)" required title="Campo Obrigatório">
                </div> 

                <div class="input-group mb-2">
                    <input type="text" class="form-control" name="crm" id="crm" value = '{{resultado.crm}}' placeholder="Insira CRM do médico (obrigatório)" required title="Campo Obrigatório">
                </div>

                {{!-- o select vai ser preenchido com o valor que já estava presente no cadastro do médico,
                e as opçoes que estavam no banco serão listadas --}}
                <div class="input-group mb-3">
                    <select name="especialidade" id="especialidade" class="form-select" required>
                        <option value="{{resultado.especialidade}}"> {{resultado.especialidade}}</option>
                        {{#each espcs}}
                            <option value="{{nome}}">{{nome}}</option>
                        {{/each}}
                    </select>
                </div>


                <div class="input-group mb-2">
                    <input type="text" class="form-control" name="rg" id="rg" value = '{{resultado.rg}}' placeholder="Insira o RG do médico (obrigatório)" required title="Campo Obrigatório">
                </div>

                <div class="input-group mb-2">
                    <input type="text"  class="form-control" name="cpf" id="cpf" value = '{{resultado.cpf}}' placeholder="Insira o CPF do médico (obrigatório)" required title="Campo Obrigatório">
                </div>

                <div class="input-group mb-2">
                    <input type="text" class="form-control" name="url" id="url" value = '{{resultado.url}}' placeholder="Url da foto do médico">
                </div>

                <div class="input-group mb-2">
                    <input type="textarea" class="form-control" name="formacao" id="formacao" value = '{{resultado.formacao}}' placeholder="Formação (obrigatório)" required title="Campo Obrigatório">
                </div>

                <div class="input-group mb-2">
                    <input type="email" class="form-control" name="email" id="email" value = '{{resultado.email}}' placeholder="Insira o e-mail">
                </div>

                <div class="input-group mb-2">
                    <input type="text" class="form-control" name="telefone" id="telefone" value = '{{resultado.telefone}}' placeholder="Digite telefone de contato">
                </div>
                <div class="col mt-3 text-end">
                    <button type="submit" class="btn btnAdm">Enviar</button>
                    <button type="reset" class="btn clearAdm">Limpar</button>
                </div>
            </form> {{!-- form --}}
        </div> {{!-- col --}}
    </div> {{!-- row --}}
</div> {{!-- container --}}


